{
  "author": "Yigui-Ding",
  "license": "MIT",
  "keywords": [
    "personal-blog"
  ],
  "type": "module",
  "scripts": {
    "submodule_install": "git submodule update --init --recursive",
    "updates-dependencies": "npx npm-check-updates -u",
    "dev": "vuepress dev blog",
    "dev:clean-dev": "vuepress dev blog --clean-cache",
    "build": "node --max_old_space_size=10240 ./node_modules/vuepress/bin/vuepress.js build blog",
    "lint": "prettier --check --write .",
    "lint:check": "prettier --check .",
    "lint-md": "markdownlint **/*.md --ignore node_modules --fix",
    "commitizen_install": "npm install commitizen -D",
    "commitizen_init": "commitizen init cz-conventional-changelog --save --save-exact",
    "commit": "git cz",
    "publish:save": "git add . && git commit -m 'update'",
    "publish": "git add . && git commit -m 'update' && git push --force origin master"
  },
  "devDependencies": {
    "@shikijs/twoslash": "^3.9.2",
    "@vuepress/bundler-vite": "^2.0.0-rc.24",
    "@vuepress/plugin-feed": "^2.0.0-rc.34",
    "@vuepress/plugin-prismjs": "^2.0.0-rc.0",
    "@vuepress/plugin-pwa": "^2.0.0-rc.26",
    "@vuepress/plugin-shiki": "^2.0.0-rc.40",
    "@vuepress/plugin-slimsearch": "^2.0.0-rc.61",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "execa": "^9.6.0",
    "less": "^4.4.0",
    "markdownlint-cli": "^0.45.0",
    "mathjax-full": "^3.2.2",
    "mermaid": "^11.9.0",
    "npm-check-updates": "^18.0.2",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "typescript": "^5.9.2",
    "vite": "^5.3.4",
    "vp-update": "^2.0.0-rc.15",
    "vuepress": "2.0.0-rc.24",
    "vuepress-theme-hope": "^2.0.0-rc.94"
  },
  "dependencies": {
    "@types/desmos": "^1.11.0",
    "@vue/repl": "^4.6.3",
    "axios": "^1.11.0",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.13",
    "desmos": "^1.5.4",
    "echarts": "^6.0.0",
    "element-plus": "^2.10.5",
    "katex": "^0.16.22",
    "nodemon": "^3.1.10",
    "spacecraft.io": "^0.0.4",
    "vue": "^3.5.18",
    "vue3-live2d": "^0.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
